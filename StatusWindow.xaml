<Window x:Class="KelnerPlus.StatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KelnerPlus"
        mc:Ignorable="d"
        Title="Statusy zamówienia" Height="409.646" Width="766.853" Icon="chef.png" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListView Name="lvStatuses" Margin="0,0,128,0" FontSize="18">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Data złożenia zamówienia" Width="220" DisplayMemberBinding="{Binding OrderTime}" />
                    <GridViewColumn Header="Status" Width="200" DisplayMemberBinding="{Binding DisplayStatus}" />
                    <GridViewColumn Header="Notatka" Width="200" DisplayMemberBinding="{Binding Note}" />
                </GridView>
            </ListView.View>

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name, StringFormat='ID ({0})'}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>
        <Button x:Name="btFinishOrder" Content="Zmień&#xa;status" FontSize="15"  Margin="638,82,5,0" VerticalAlignment="Top" Height="70" Click="btFinishOrder_Click"/>
        <Button x:Name="btRemoveOrder" Content="    Usuń&#xA;zamówienie"  FontSize="15" Margin="638,170,5,0" VerticalAlignment="Top" Height="70"/>
    </Grid>
</Window>
